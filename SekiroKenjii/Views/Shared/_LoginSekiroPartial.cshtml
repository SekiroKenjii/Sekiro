@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@await Component.InvokeAsync("UserName")</a></li>
    <li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">Đăng Xuất</button>
        </form>
    </li>
}
else
{
    <li><a asp-area="Identity" asp-page="/Account/Register">Đăng Kí</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login">Đăng Nhập</a></li>
}
