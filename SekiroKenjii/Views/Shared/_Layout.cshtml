<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - IWebMVVM3</title>

    <link rel="stylesheet" href="~/layout/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/layout/css/modern-business.css" />

    <script src="https://kit.fontawesome.com/883812c4e9.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid" style="max-width:1450px">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Start IWeb</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" asp-area="" asp-controller="Home" asp-action="Index" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Supplier" asp-action="Index">Supplier</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Coupon" asp-action="Index">Coupon</a>
                            <a class="dropdown-item" href="#">User</a>
                        </div>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <header>
        @RenderSection("CarouselSlide", required: false)
    </header>

    <br />
    <br />
    <br />
    <!-- Page Content -->
    <div class="container-fluid" style="max-width:1450px;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            @RenderSection("Breadcrumb", required: false)
        </ol>
        <br />
        <br />
        @RenderBody()
    </div>

    <br />

    <div class="brands-area d-flex align-items-center justify-content-between">
        @RenderSection("Brandimg", required: false)
    </div>

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Võ Trung Thường 2019</p>
        </div>
    </footer>

    <script src="~/layout/vendor/jquery/jquery.min.js"></script>
    <script src="~/layout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
