@model SekiroKenjii.Models.Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-info">Chi Tiết Loại Sản Phẩm</h1>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Name" class="col-form-label"></label>
                <div class="input-group">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary form-control">Chỉnh Sửa</a>
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-success form-control">Trở Lại Danh Sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
