@model SekiroKenjii.Models.ViewModel.SupplierViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-info">Chỉnh Sửa Nhà Cung Cấp</h1>
            </div>
        </div>
    </div>
</div>
<form method="post" enctype="multipart/form-data" class="container-fluid">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <input type="hidden" asp-for="Suppliers.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-9">
                    <div class="form-group row">
                        <label asp-for="Suppliers.Name" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.BrandImage" class="col-form-label"></label>
                        <div class="custom-file">
                            <input type="file" id="projectImage" name="files" multiple class="custom-file-input" />
                            <label class="custom-file-label" for="projectImage">Browse...</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.Address" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.Address" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.City" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.City" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.City" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.Country" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.Country" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.Region" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.Region" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.Region" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.Phone" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.Phone" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Suppliers.HomePage" class="col-form-label"></label>
                        <div class="input-group">
                            <input asp-for="Suppliers.HomePage" class="form-control" />
                        </div>
                        <span asp-validation-for="Suppliers.HomePage" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <img src="@Model.Suppliers.BrandImage" style="max-width: 100%; height: auto; border-radius: 5px; border: 1px solid #bbb9b9;" />
                </div>
            </div>
            <br />
            <div class="col-9">
                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Cập Nhật" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Quay Lại Danh Sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

