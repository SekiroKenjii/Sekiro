@model SekiroKenjii.Models.ViewModel.SupplierViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-primary">Delete Supplier</h1>
            </div>
        </div>
    </div>
</div>
<form method="post" asp-action="Delete" class="container-fluid">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <input type="hidden" asp-for="Suppliers.Id"/>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Suppliers.Name" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Suppliers.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-10 offset-2">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-danger form-control" value="Delete" />
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

