@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Search{
    <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" />
        <div class="input-group-append">
            <button class="btn btn-navbar" type="submit"><i class="fas fa-search"></i></button>
        </div>
    </div>
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-info">Danh Sách Sản Phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <partial name="_CreateButtonPartial" />
                </ol>
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @if (Model.Count() > 0)
                {
                    <div class="main-card mb-3 card">
                        <div class="card-body p-0">
                            <table class="table table-bordered">
                                <tr class="table-secondary">
                                    <th>
                                        @Html.DisplayNameFor(m => m.SortName)
                                    </th>
                                    <th>
                                        Loại
                                    </th>
                                    <th>
                                        Nhà Cung Cấp
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.Price) (VND)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.UnitsInStock)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.UnitsOnOder)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.Discontinued)
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => item.SortName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Category.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Supplier.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.UnitsInStock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.UnitsOnOder)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Discontinued)
                                        </td>
                                        <partial name="_TableButtonPartial" model="item.Id" />
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <p>Chưa có sản phầm nào được tạo...</p>
                }
            </div>
        </div>
    </div>
</section>

