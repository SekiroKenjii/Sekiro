@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Top{
    <div class="page-banner-section section">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="page-banner-content">
                        <h1>Trang Đăng Nhập</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<form id="account" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-xs-12 mb-20">
            <label asp-for="Input.Email">Email <span class="required">*</span></label>
            <input asp-for="Input.Email" type="text" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="col-xs-12 mb-20">
            <label asp-for="Input.Password">Mật khẩu <span class="required">*</span></label>
            <input asp-for="Input.Password" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        
        <div class="col-xs-12 mb-20">
            <input value="Đăng Nhập" name="Đăng Nhập" class="inline" type="submit"/>
            <label class="inline" asp-for="Input.RememberMe">
                <input id="rememberme" asp-for="Input.RememberMe" type="checkbox"/> Duy trì đăng nhập
            </label>
        </div>
        <div class="col-xs-12">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí một tài khoản mới</a>
            </p>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
